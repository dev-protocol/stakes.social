{
  "name": "stakes.social",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "yarn --cwd packages/web start:prod",
    "dev": "yarn --cwd packages/web start:dev",
    "build": "lerna run build --include-dependencies",
    "lint": "eslint --fix -c ./.eslintrc.json './packages/**/*.{ts,tsx}'",
    "format": "prettier --write ./packages/web/public/locales/en/PossessionOutline.json",
    "test": "lerna run test",
    "clean": "lerna run clean && lerna clean --y"
  },
  "devDependencies": {
    "@types/jest": "26.0.12",
    "@types/supertest": "2.0.10",
    "@typescript-eslint/eslint-plugin": "3.10.1",
    "@typescript-eslint/parser": "3.10.1",
    "concurrently": "5.3.0",
    "eslint": "7.8.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.4",
    "eslint-plugin-react": "7.20.5",
    "eslint-plugin-react-hooks": "4.1.0",
    "husky": "4.2.5",
    "jest": "26.4.2",
    "lerna": "3.22.1",
    "lint-staged": "10.2.13",
    "nodemon": "2.0.4",
    "npm-run-all": "4.1.5",
    "prettier": "2.1.1",
    "rimraf": "3.0.2",
    "serve": "11.3.2",
    "ts-jest": "26.3.0",
    "ts-node": "8.10.2",
    "tsconfig-paths": "3.9.0",
    "typescript": "4.0.2",
    "wait-on": "5.2.0"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged  --allow-empty"
    }
  },
  "lint-staged": {
    "*.{.ts,tsx}": [
      "eslint --fix -c ./.eslintrc.json"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
