{
  "name": "stakes.social",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "yarn --cwd packages/web start:prod",
    "dev": "yarn --cwd packages/web start:dev",
    "build": "lerna run build --include-dependencies",
    "lint": "eslint --fix -c ./.eslintrc.json './packages/**/*.{ts,tsx}'",
    "format": "prettier --write ./packages/web/public/locales/en/PossessionOutline.json",
    "test": "lerna run test",
    "clean": "lerna run clean && lerna clean --y",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@types/jest": "27.0.2",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "5.4.0",
    "@typescript-eslint/parser": "5.4.0",
    "concurrently": "6.4.0",
    "eslint": "8.2.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.27.0",
    "eslint-plugin-react-hooks": "4.3.0",
    "husky": "7.0.4",
    "jest": "27.3.1",
    "lerna": "4.0.0",
    "lint-staged": "12.0.2",
    "nodemon": "2.0.15",
    "npm-run-all": "4.1.5",
    "prettier": "2.4.1",
    "rimraf": "3.0.2",
    "serve": "13.0.2",
    "ts-jest": "27.0.7",
    "ts-node": "10.4.0",
    "tsconfig-paths": "3.11.0",
    "typescript": "4.4.4",
    "wait-on": "6.0.0"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "lint-staged": {
    "*.{.ts,tsx}": [
      "eslint --fix -c ./.eslintrc.json"
    ],
    "*.json": [
      "prettier --write"
    ]
  }
}
